<%= form_with model: tag do |form| %>
  <div class="field">
    <%= form.label :name, "Name:" %>
    <%= form.text_field :name %>
    <% tag.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :description, "Short description:" %>
    <%= form.text_area :description %>
    <% tag.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>