<% content_for :title do %>
  <%= @article.title %>
<% end %>

<div class="article">
    <article class="post">

        <h1 class="post-title"><%= @article.title %></h1>

        <div class="post-image">
            <img src="<%= @article.image_url %>" alt="Article image">
        </div>
        <div class="post-head">
            <div class="post-infos">
                <div>
                    <span><a href="#">John Doe</a>ãƒ»<time><%= @article.created_at.strftime("%d %b, %Y  %I:%M %P") %></time></span>
                </div>           
            </div>

            <div class="post-tags">
                <ul>
                    <% @article.tags.each do |tag| %>
                        <a href="/articles/tags/<%= tag.id %>"><li class="tag"><%= tag.name %></li></a>
                    <% end %>
                </ul>
            </div>
        </div>

        <div class="post-body">
            <p><%= @article.body %></p>
        </div>

        <div class="post-footer">
            <% if !@article_after.nil? %>
                <a href="<%= @article_after[:url] %>">
                    <%= @article_after[:title] %> 
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="post-svg-link">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                    </svg>
                </a>
            <% end %>
            
        </div>
    </article>
</div>